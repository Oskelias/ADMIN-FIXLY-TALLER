# Fixly Admin API - Environment Variables
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# MercadoPago Integration
MP_ACCESS_TOKEN=your-mercadopago-access-token
MP_PUBLIC_KEY=your-mercadopago-public-key
MP_WEBHOOK_SECRET=your-webhook-secret-optional

# Admin Frontend URL (for CORS)
ADMIN_URL=http://localhost:5173

# Cloudflare D1 Database
# These are set automatically when using wrangler
# D1_DATABASE_ID=your-database-id

# Rate Limiting (KV namespace)
# RATE_LIMIT_KV=your-kv-namespace-id

# Seed Scripts (for npm run seed:superadmin)
SUPERADMIN_EMAIL=admin@fixly.com
SUPERADMIN_PASSWORD=your-secure-password

# Demo Seed (for npm run seed:demo)
DEMO_USER_EMAIL=demo@fixly.com
DEMO_USER_PASSWORD=demo123
